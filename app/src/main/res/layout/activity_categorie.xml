<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#8c95e8"
	>

	<ListView
		android:id="@+id/liste_Exercices_Categorie"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginBottom="10dp"
		android:textAlignment="center"
		app:layout_constraintBottom_toTopOf="@+id/btn_form"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="1.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		/>


	<Button
		android:id="@+id/btn_form"
		android:layout_width="50dp"
		android:layout_height="50dp"

		android:layout_marginBottom="10dp"
		android:backgroundTint="@color/dark_purple"
		android:text="@string/Add_Form"
		android:textColor="@color/lighter_purple"
		android:textSize="25sp"

		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/liste_Exercices_Categorie"

		/>
</androidx.constraintlayout.widget.ConstraintLayout>

