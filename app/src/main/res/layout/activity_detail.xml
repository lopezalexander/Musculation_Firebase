<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/dark_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

<!--        IMAGE DE L'EXERCICE-->
        <ImageView
            android:id="@+id/imageView_detail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="80pt">

<!--            DESCRIPTION-->
            <TextView
                android:id="@+id/textView_description"
                android:layout_width="match_parent"
                android:layout_height="85pt"
                android:background="@drawable/contour"
                android:gravity="center"
                android:layout_margin="20dp"
                android:text="description"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

<!--            SETS-->
            <TextView
                android:id="@+id/textView_sets"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/contour"
                android:gravity="center"
                android:text="3 Set"
                android:textColor="@color/black" />

<!--            REPEATS-->
            <TextView
                android:id="@+id/textView_repeat"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/contour"
                android:gravity="center"
                android:text="x10"
                android:textColor="@color/black" />

        </LinearLayout>


<!--        PAUSE-->
        <TextView
            android:id="@+id/textView_pause"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/contour"
            android:gravity="center"
            android:text="30 Secondes de pause"
            android:textColor="@color/black" />

<!--        IMAGE LOGO-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60pt"
            android:layout_marginTop="10dp"
            android:src="@drawable/icons_logo9_4"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>